                                    <td>Specialty</td>
                                    <td>{{appointment.specialtyName}}</td>
                                </tr>
                                <tr>
                                    <td>Services</td>
                                    <td>
                                        {{#if appointment.services.length}}
                                            <div class="service-list">
                                                {{#each appointment.services}}
                                                    <div class="service-item">
                                                        <span class="service-name">{{serviceName}}</span>
                                                        <span class="service-price">{{formattedPrice}}</span>
                                                    </div>
                                                {{/each}}
                                            </div>
                                        {{else}}
                                            None
                                        {{/if}}
                                    </td>
                                </tr>
                                <tr>
                                    <td>Doctor</td>
                                    <td>{{appointment.doctorName}}</td>
                                </tr>
                                <tr>
                                    <td>Room's No</td>
                                    <td>{{appointment.roomNumber}}</td>
                                </tr>
                                <tr>
                                    <td>Order's No</td>
                                    <td class="order-no">{{appointment.queueNumber}}</td>
                                </tr>
                                <tr>
                                    <td>Reason</td>
                                    <td>{{appointment.reason}}</td>
                                </tr>
                            </table>
                        </div>
                        <div class="modal-body-time">
                            <h5>Appointment Time</h5>
                            <div>
                                <img src="/public/images/icon/icons8-clock-32 (1).png" alt="">
