                                <img src="/public/images/icon/icons8-calendar-32.png" alt="" width="20px">
                            </div>
                        </div>                           
                        <div class="input-group">
                            <input type="text" id="address" placeholder="Address" value="{{appointment.patientAddress}}" readonly>
                        </div>
                    </div>
                    <hr class="custom-separate-line">
                    <h5 class="mt-2 mb-5">Appointment Information</h5>
                    <div class="modal-body-appointment-container">
                        <div class="modal-body-appointment">
                            <table class="appointment-info-table">
