<div class="form-grid">
    <div class="form-group">
        <label for="full-name">Full Name</label>
        <input type="text" id="full-name" value="Le Thi Thu Huong">
    </div>
    <div class="form-group">
        <label for="phone-number">Phone number</label>
        <input type="text" id="phone-number" value="Le Thi Thu Huong">
    </div>
    <div class="form-group">
        <label for="birthday">Birthday</label>
        <div class="birthday-input">
            <input type="text" id="birthday" value="10/11/2004">
            <img src="/public/images/icon/icons8-calendar-32.png" alt="" width="20px">
        </div>
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" id="email" value="Le Thi Thu Huong">
    </div>
    <div class="form-group">
        <label for="gender">Gender</label>
        <select id="gender">
            <option value="" disabled selected>Gender</option>
            <option value="male">Male</option>
            <option value="female">Female</option>
            <option value="other">Other</option>
        </select>
    </div>
    <div class="form-group">
        <label for="address">Address</label>
        <input type="text" id="address" value="Le Thi Thu Huong">
    </div>
</div>
<div class="update-button-container">
    <button class="back-button">Back</button>
    <button class="update-button">Update</button>
</div>
