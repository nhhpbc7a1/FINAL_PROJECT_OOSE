                <div>
                    <img src="/public/images/icon/icons8-user-blue.png" alt="">
                    <span>Le Thi Thu Huong</span>
                </div>
                <div class="time-value-container">
                    <img src="/public/images/icon/icons8-clock-32 (1).png" alt="">
                    <span class="time-value">100/11/03</span>
                </div>
            </div>
            <div class="doctor-info">
                <img src="/public/images/icon/icons8-doctor-32.png" alt="">
                <span>Hayashi Kyosuke</span>
            </div>
            <div class="specialty-info">
                <img src="/public/images/icon/icons8-stethoscope-yellow.png" alt="">
                <span style="color: #E8B716;">Obstetrics and Gynecology</span>
            </div>

            <div class="fee-info">
                <div>
                    <img src="/public/images/icon/icons8-payment-32 (1) copy.png" alt="">
                    <span style="color: #16A90F;">1.200.000 VND</span>
                </div>
                <div class="buttons">
                    <button class="view-detail-button"><a href="/patient/profile/appointmentDetail" style="color: white;">View Detail</a> </button>
                    <button class="cancel-button">Cancel</button>
                </div>
            </div>
        </div>
