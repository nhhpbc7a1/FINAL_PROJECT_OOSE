      </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      var calendar = new FullCalendar.Calendar(document.getElementById('calendar'), {
        locale: 'en',
        initialView: 'dayGridMonth',
        height: 500,
        headerToolbar: {
          left: 'prev,next today',
          center: 'title',
          right: 'dayGridMonth,timeGridWeek'
        },
        buttonText: {
          today: 'Today',
          month: 'Month',
          week: 'Week'
        },
        themeSystem: 'standard',
        events: [
          {
            title: 'Patient A Examination',
            start: '2025-05-05T10:00:00',
            end: '2025-05-05T11:00:00',
            backgroundColor: '#28a745',
            borderColor: '#218838'
          },
          {
            title: 'Patient B Consultation',
            start: '2025-05-06T14:00:00',
            backgroundColor: '#006eb9',
            borderColor: '#0056b3'
          },
          {
            title: 'Surgery',
            start: '2025-05-10T09:00:00',
            end: '2025-05-10T12:00:00',
            backgroundColor: '#dc3545',
            borderColor: '#c82333'
          },
          {
            title: 'Team Meeting',
            start: '2025-05-15T15:00:00',
            backgroundColor: '#6c757d',
            borderColor: '#5a6268'
          },
          {
            title: 'Training Session',
            start: '2025-05-20T13:00:00',
            end: '2025-05-20T16:00:00',
            backgroundColor: '#17a2b8',
            borderColor: '#138496'
          }
        ],
        eventTimeFormat: {
          hour: '2-digit',
          minute: '2-digit',
          meridiem: false
        }
      });
      calendar.render();
      
      // Make schedule items clickable to navigate to appointments
      document.querySelectorAll('.schedule-list-item').forEach(item => {
        item.addEventListener('click', function() {
          window.location.href = '/doctor/appointments';
        });
      });
    });
  </script>
</body>
</html>