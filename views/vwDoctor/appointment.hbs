              </div>
              
              <a href="/doctor/examination" id="examinationBtn" class="action-btn">Examination</a>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
   <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.js"></script>
   <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
  flatpickr("#datepicker", {
    dateFormat: "d/m/Y",
    defaultDate: "27/04/2025",
    onChange: function(selectedDates, dateStr, instance) {
      if (selectedDates.length > 0) {
        const selectedDate = selectedDates[0];

        // Format ngày dạng "Sunday, April 27, 2025"
        const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
        const formatted = selectedDate.toLocaleDateString('en-US', options);

        // Cập nhật nội dung text trong div
        document.getElementById("appointmentDateText").textContent = formatted;
      }
    }
  });
</script>
   <script>
     const sidebar = document.getElementById('sidebar');
      const toggleSidebar = document.getElementById('toggleSidebar');
      
      toggleSidebar.addEventListener('click', function() {
        sidebar.classList.toggle('collapsed');
        
        // Update toggle button position based on sidebar state
        if (sidebar.classList.contains('collapsed')) {
          toggleSidebar.style.right = '-15px';
        } else {
          toggleSidebar.style.right = '-15px';
        }
      });
      
      // Make patient name clickable to go to patient details
      document.querySelector('.patient-name').style.cursor = 'pointer';
      document.querySelector('.patient-name').addEventListener('click', function() {
        // Redirect to the patient details page
        window.location.href = `/doctor/patient-details`;
      });
  </script>
</body>

</html>