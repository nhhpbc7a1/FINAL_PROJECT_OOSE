            <div class="appointment-card">
              <div class="appointment-time">09:15 AM</div>
              <div class="patient-name">NGUYEN LE TUNG CHI</div>
              <div class="appointment-type">Re-examination</div>
              <div class="appointment-location">Internal Medicine - Room 203</div>
              <div class="appointment-status status-examining">Examining</div>
              <div class="appointment-number">2</div>
            </div>
            
            <div class="appointment-card">
              <div class="appointment-time">09:15 AM</div>
              <div class="patient-name">NGUYEN HOANG HUY</div>
              <div class="appointment-type">Re-examination</div>
              <div class="appointment-location">Internal Medicine - Room 203</div>
              <div class="appointment-status status-examining">Examining</div>
              <div class="appointment-number">3</div>
            </div>
            
            <div class="appointment-card">
              <div class="appointment-time">09:15 AM</div>
              <div class="patient-name">NGUYEN HOANG HUY</div>
              <div class="appointment-type">Re-examination</div>
              <div class="appointment-location">Internal Medicine - Room 203</div>
              <div class="appointment-status status-examining">Examining</div>
