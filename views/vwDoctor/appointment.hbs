                  <div class="info-field">
                    <div class="field-label">Phone Number</div>
                    <div class="field-value">+84 2131231231233312</div>
                  </div>
                  <div class="info-field">
                    <div class="field-label">Email</div>
                    <div class="field-value">khoane@gmail.com</div>
                  </div>
